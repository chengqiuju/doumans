<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="49dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rb_shouye"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/rb_shouye_text"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:background="@drawable/radio_shouye"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:clickable="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rb_licai"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1"

            android:button="@null">

            <TextView
                android:id="@+id/rb_licai_text"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:background="@drawable/radio_licai"
                android:clickable="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rb_my"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:button="@null">

            <TextView
                android:id="@+id/rb_my_text"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:background="@drawable/radio_my"
                android:clickable="true" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>